{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "project": {
    "name": "Tourine.Web"
  },
  "apps": [
    {
      "name": "trn",
      "root": "src",
      "outDir": "dist/prod",
      "assets": [
        "assets",
        "favicon.ico",
        "favicon.png"
      ],
      "baseHref":"/app/",
      "index": "index.html",
      "main": "main.ts",
      "polyfills": "polyfills.ts",
      "test": "test.ts",
      "tsconfig": "tsconfig.ng.json",
      "testTsconfig": "tsconfig.spec.json",
      "styles": [
        "./app/@theme/styles/iranian-sans.scss",
        "./app/@theme/styles/material-icon.scss",
        "./app/@theme/styles/styles.scss"
      ],
      "environmentSource": "environments/environment.ts",
      "environments": {
        "dev": "environments/environment.ts",
        "prod": "environments/environment.prod.ts"
      }
    }
  ],
  "e2e": {
    "protractor": {
      "config": "./protractor.conf.js"
    }
  },
  "lint": [
    {
      "files": "src/**/*.ts",
      "project": "src/tsconfig.ng.json"
    },
    {
      "project": "src/tsconfig.spec.json"
    },
    {
      "project": "e2e/tsconfig.e2e.json"
    }
  ],
  "test": {
    "karma": {
      "config": "./karma.conf.js"
    }
  },
  "defaults": {
    "styleExt": "scss",
    "component": {}
  }
}
