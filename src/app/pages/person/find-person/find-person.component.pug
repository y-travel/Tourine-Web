include ../../../mixin
div(fxLayout="row", [formGroup]="personForm", fxFlex="30")
  +matField("nationalCode", "{{'nationalCode'|translate}}", "personForm","","")((keyup.enter)="doAction(nationalCode.value,'search')", #nationalCode,
  (input)="inputChanage(nationalCode.value)", [readonly]="readOnly", autocomplete="off",cdkFocusInitial)
    mat-icon.pull-left(matSuffix, id='search-icon', matTooltip="{{'iconKind.'+ icon|translate}}", , (click) = "doAction(nationalCode.value, icon)") {{icon}}
span(*ngIf="icon === 'person_add'") {{"msg.notFound"|translate}}
div#person-details(fxLayout="column", *ngIf="personForm.value.id && icon !== 'search'")
  div(fxLayout="column")
    mat-hint(size="small") {{'person.name'|translate}} :
    mat-label  {{ personForm.value.name}}
  div(fxLayout="column")
    mat-hint(size="small") {{'person.family'|translate}} :
    mat-label  {{personForm.value.family}}
  div(fxLayout='column')
    mat-hint(size="small") {{'person.mobileNumber'|translate}} :
    mat-label  {{personForm.value.mobileNumber}}

