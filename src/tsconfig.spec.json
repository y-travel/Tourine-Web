{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "../out-tsc/spec",
    "baseUrl": "",
    "module": "commonjs",
    "types": [
      "jasmine",
      "node"
    ],
    "experimentalDecorators": true,
    "paths": {
      "@angular/*": [
        "../node_modules/@angular/*"
      ],
      "rxjs/*": [
        "../node_modules/rxjs/*"
      ]
    }
  },
  "files": [
    "test.ts"
  ],
  "include": [
    "app/**/*",
    "**/*.spec.ts",
    "**/*.d.ts"
  ]
}
